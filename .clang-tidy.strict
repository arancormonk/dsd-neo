Checks: >
  # High-signal categories first (strict superset)
  clang-analyzer-*,
  clang-analyzer-optin.core*,
  clang-analyzer-optin.portability.UnixAPI,
  clang-analyzer-optin.performance.Padding,
  bugprone-*,
  security-*,
  cert-*,
  misc-*,
  # Useful readability/performance/portability in strict mode only
  performance-*,
  readability-*,
  portability-*,
  # Align with common compiler warnings we gate on in builds
  clang-diagnostic-sign-compare,
  clang-diagnostic-implicit-fallthrough,
  clang-diagnostic-tautological-pointer-compare,
  # Disable known noisy checks even in strict
  -bugprone-easily-swappable-parameters,
  -bugprone-narrowing-conversions,
  -readability-function-cognitive-complexity,
  -readability-function-size,
  -readability-identifier-length,
  -readability-identifier-naming,
  -readability-magic-numbers,
  -readability-uppercase-literal-suffix,
  -readability-isolate-declaration,
  -readability-non-const-parameter,
  -readability-math-missing-parentheses,
  # Noisy misc checks
  -misc-no-recursion,
  -misc-unused-parameters,
  -misc-include-cleaner
WarningsAsErrors: 'clang-analyzer-*,security-*,bugprone-macro-parentheses,bugprone-branch-clone,bugprone-integer-division,bugprone-signed-char-misuse,bugprone-implicit-widening-of-multiplication-result,bugprone-unsafe-functions,bugprone-too-small-loop-variable,bugprone-suspicious-string-compare,misc-redundant-expression,cert-str34-c,cert-flp30-c,clang-diagnostic-sign-compare,clang-diagnostic-implicit-fallthrough,clang-diagnostic-tautological-pointer-compare'
HeaderFilterRegex: '^(src|include|apps)/'
FormatStyle: none
CheckOptions:
  - key: bugprone-branch-clone.MinLines
    value: '5'
  - key: bugprone-branch-clone.MinStructuralSimilarity
    value: '0.9'
