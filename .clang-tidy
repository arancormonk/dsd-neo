Checks: >
  # High-signal categories only (default mode)
  clang-analyzer-*,
  -clang-analyzer-security.insecureAPI.DeprecatedOrUnsafeBufferHandling,
  clang-analyzer-optin.core*,
  clang-analyzer-optin.portability.UnixAPI,
  clang-analyzer-optin.performance.Padding,
  bugprone-*,
  security-*,
  # Align with common compiler warnings we gate on in builds
  clang-diagnostic-sign-compare,
  clang-diagnostic-implicit-fallthrough,
  clang-diagnostic-tautological-pointer-compare,
  # Disable known noisy checks here; keep in strict config instead
  -bugprone-easily-swappable-parameters,
  -bugprone-narrowing-conversions
WarningsAsErrors: 'clang-analyzer-*,security-*,bugprone-macro-parentheses,bugprone-branch-clone,bugprone-integer-division,bugprone-signed-char-misuse,bugprone-implicit-widening-of-multiplication-result,bugprone-unsafe-functions,clang-diagnostic-sign-compare,clang-diagnostic-implicit-fallthrough,clang-diagnostic-tautological-pointer-compare'
HeaderFilterRegex: '^(src|include|apps)/'
FormatStyle: none
CheckOptions:
  - key: bugprone-branch-clone.MinLines
    value: '5'
  - key: bugprone-branch-clone.MinStructuralSimilarity
    value: '0.9'
