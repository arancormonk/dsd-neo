# High-signal checks (default mode).
Checks: >
  -*,
  clang-analyzer-*,
  -clang-analyzer-security.insecureAPI.DeprecatedOrUnsafeBufferHandling,
  clang-analyzer-optin.core*,
  clang-analyzer-optin.portability.UnixAPI,
  clang-analyzer-optin.performance.Padding,
  bugprone-*,
  security-*,
  misc-redundant-expression,
  misc-static-assert,
  cert-str34-c,
  cert-flp30-c,
  clang-diagnostic-sign-compare,
  clang-diagnostic-implicit-fallthrough,
  clang-diagnostic-tautological-pointer-compare,
  -bugprone-easily-swappable-parameters,
  -bugprone-narrowing-conversions
WarningsAsErrors: 'clang-analyzer-*,security-*,bugprone-macro-parentheses,bugprone-branch-clone,bugprone-integer-division,bugprone-signed-char-misuse,bugprone-implicit-widening-of-multiplication-result,bugprone-unsafe-functions,bugprone-too-small-loop-variable,bugprone-suspicious-string-compare,bugprone-assignment-in-if-condition,bugprone-exception-escape,bugprone-misplaced-widening-cast,bugprone-multi-level-implicit-pointer-conversion,bugprone-reserved-identifier,bugprone-switch-missing-default-case,bugprone-suspicious-memory-comparison,misc-redundant-expression,cert-str34-c,cert-flp30-c,clang-diagnostic-sign-compare,clang-diagnostic-implicit-fallthrough,clang-diagnostic-tautological-pointer-compare'
HeaderFilterRegex: '(^|.*/)(src|include|apps)/'
ExcludeHeaderFilterRegex: '(^|.*/)(src/third_party)/'
FormatStyle: none
CheckOptions:
  - key: bugprone-branch-clone.MinLines
    value: '5'
  - key: bugprone-branch-clone.MinStructuralSimilarity
    value: '0.9'
  - key: bugprone-reserved-identifier.AllowedIdentifiers
    value: '_GNU_SOURCE;_USE_MATH_DEFINES'
